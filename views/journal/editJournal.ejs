	<div class="col s1"></div>
	<div class="col s10">
	   	<h5><a href="/journal" class="valign-wrapper">
	   		<i class="material-icons">arrow_back</i>
	   		My Journals
		</a></h5>
	</div>
	<div class="col s1"></div>
