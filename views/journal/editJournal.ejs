<!-- breadcrumbs -->
<div class="row bcbreadcrumb">
	<div class="col s1"></div>
	<div class="col s10">
	   	<h5><a href="/journal" class="valign-wrapper">
	   		<i class="material-icons">arrow_back</i>
	   		My Journals
		</a></h5>
	</div>
	<div class="col s1"></div>
</div>

<!-- Form -->
<div class="row">
	<div class="col s1"></div>
    <form class="col s10  z-depth-1" method="POST" action="/journal/editJournal/<%=sessionLogId%>">
    	<input id="userId" name="userId" type="hidden" value="<%=currentUser.dataValues.id%>">
    	<header class="row valign-wrapper">
    		<h5 class="col s10">Edit Journal Entry</h5>
    		<button id="saveSessionLog"  type="submit" class="btn">Save</button>
    	</header>
      	<div class="row">
      	  	<div class="input-field col s6">
      	  	  	<input name="journalEntryTitle" placeholder="Add title here" id="journalEntryTitle" type="text" class="validate" >
      	  	  	<label for="journalEntryTitle">Journal Entry Title</label>
      	  	</div>
      	  	<div class="input-field col s3">
   		 		<select name="journalEntryStatus">
   		 		  	<option value="open" selected>Open</option>
   		 		  	<option value="closed">Closed</option>
   		 		</select>
    			<label>Journal Entry Status</label>
      	  	</div>       
      	  	<div class="input-field col s3">
      	  	  	<input name="journalEntryDate" id="journalEntryDate" type="text" class="datepicker">
      	  	  	<label for="journalEntryDate">Date</label>
      	  	</div>
      	</div>
      	<div class="row">
      	  	<div class="input-field col s12">
      	  	  	<textarea name="journalEntryNotes" placeholder="Add notes here" 
      	  	  	id="journalNotes" class="materialize-textarea"></textarea>
      	  	  	<label for="journalNotes">Journal Entry Notes</label>
      	  	</div>
      	</div>
      	<div class="row">
    		<button data-target="addJournalItem" id="addJournalItem" class="btn modal-trigger">Add Item
    			<i class="material-icons right">add</i>
    		</button>
    	</div>
    </form>
    <div class="col s1"></div>
</div>

<!-- load journal items -->
<div class="row">
	<div class="col s1"></div>
		<div class="col s10">
			<ul class="collapsible popout" data-collapsible="expandable">
			  	<li>
			  	  	<div class="collapsible-header">
			  	  		Item 1
			  	  	</div>
			  	  	<div class="collapsible-body">
			  	  		<span>Lorem ipsum dolor sit amet.</span>
			  	  	</div>
			  	</li>
			</ul>
		</div>
	<div class="col s1"></div>
</div>

<!-- Modal - Add Journal Item -->
<div id="addJournalItem" class="modal modal-fixed-footer">
  	<div class="row"></div>
		<div class="row">
		    <form class="col s12" action="/journal/addJournalItem" method="POST">
		    	<header class="row">
		    		<h5>Item Description</h5>
		    		<button type="submit" class="modal-action modal-close btn-flat right" 
		    		>Add Item</button>
		    	</header>
		      	<div class="row">
		      	  	<div class="input-field col s8">
		      	  	  	<input name="jiTitle" placeholder="Add title here" 
		      	  	  	id="jiTitle" type="text" class="validate">
		      	  	  	<label for="jiTitle">Title</label>
		      	  	</div>
		      	  	<div class="input-field col s4">
		      	  	  	<input name="jiLink" placeholder="Add link here" 
		      	  	  	id="jiLink" type="text" class="validate">
		      	  	  	<label for="jiLink">Related Link</label>
		      	  	</div>
		      	</div>
		      	<div class="row">
		      	  	<div class="input-field col s12">
		      	  	  	<textarea name="jiNotes" placeholder="Add notes here" 
		      	  	  	id="jiNotes" class="materialize-textarea"></textarea>
		      	  	  	<label for="jiNotes">Notes</label>
		      	  	</div>
		      	</div>
		      	<div class="divider"></div>
		      	<header class="row">
		    		<h5>Details</h5>
		    	</header>
		      	<div class="row">
		      	  	<div class="col s6">
		   		 		<select name="activityType">
		   		 			<option value="" disabled selected>Select Activity</option>
   		 				  	<option value="Scales">Scales</option>
   		 				  	<option value="Warm Up">Warm Up</option>
   		 				  	<option value="Learn New blah">Learn New blah</option>
   		 				  	<option value="Add from JS">Learn New blah</option>
   		 				</select>
    					<label>Activity Type</label>
		      	  	</div>
		      	  	<div class="col s3">
		   		 		<select name="time">
		   		 			<option value="" disabled selected>Select Time</option>
   		 				  	<option value="05">5 min</option>
   		 				  	<option value="10">Load in JS</option>
   		 				</select>
    					<label>Time</label>
		      	  	</div>
		      	</div>
		      	<div class="row">
		      	  	<div class="col s6">
		   		 		<select name="goalId">
		   		 			<option value="" disabled selected>Select Activity</option>
   		 				  	<option value="goalId">Goal Text</option>
   		 				</select>
    					<label>Relate to Goal</label>
		      	  	</div>
		      	  	<div class="col s6">
		   		 		<select name="chordProgId">
		   		 			<option value="" disabled selected>Select Time</option>
   		 				  	<option value="chordProgressionId">Prog Text</option>
   		 				</select>
    					<label>Your Chord Progressions</label>
		      	  	</div>
		      	</div>
		    </form>
		</div>
</div>


