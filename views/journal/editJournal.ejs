<!-- Form -->
<div class="row">
	<div class="col s1"></div>
    <form class="col s10  z-depth-1">
    	<header class="row valign-wrapper">
    		<h5 class="col s10">Edit Journal Entry</h5>
    		<a class="col s2 waves-effect waves-light btn" href="/journal">Save</a>
    	</header>
      	<div class="row">
      	  	<div class="input-field col s6">
      	  	  	<input placeholder="Add title here" id="journalTitle" type="text" class="validate">
      	  	  	<label for="journalTitle">Journal Entry Title</label>
      	  	</div>
      	  	<div class="input-field col s3">
   		 		<select>
   		 		  	<option value="open" selected>Open</option>
   		 		  	<option value="closed">Closed</option>
   		 		</select>
    			<label>Journal Entry Status</label>
      	  	</div>        
      	  	<div class="input-field col s3">
      	  	  	<input id="journalDate" type="text" class="datepicker">
      	  	  	<label for="journalDate">Date</label>
      	  	</div>
      	</div>
      	<div class="row">
      	  	<div class="input-field col s12">
      	  	  	<textarea placeholder="Add notes here" id="journalNotes" class="materialize-textarea"></textarea>
      	  	  	<label for="journalNotes">Journal Entry Notes</label>
      	  	</div>
      	</div>
      	<div class="row">
    		<button data-target="addJournalItem" class="btn modal-trigger">Add Item
    			<i class="material-icons right">add</i>
    		</button>
    	</div>
    </form>
    <div class="col s1"></div>
</div>

